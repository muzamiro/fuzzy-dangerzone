<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.dcutt.android"
        version     = "1.0.0"
        versionCode = "320">
    <name>DCU timetables</name>

    <description>
      Mobile application for viewing DCU Timetables
   </description>

   <author href="http:/dcutt.com/#!/about" email="devs@ianduffy.ie">
      Ben Chapman and Ian Duffy
   </author>
   
    
    <preference name="phonegap-version"           value="2.3.0" />
    <preference name="orientation"                value="portrait" />
    <preference name="target-device"              value="universal" />
    <preference name="fullscreen"                 value="false" />
    <preference name="webviewbounce"              value="false" />
    <preference name="prerendered-icon"           value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="android-minSdkVersion" value="5" />
    <preference name="permissions" value="none"/>
    <preference name="load-url-timeout" value="10000" />

    <icon src="res/icon/android/icon-36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/icon-48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/icon-72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/icon-96.png"   gap:platform="android"    gap:density="xhdpi" />

    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-landscape.png" gap:platform="android" gap:density="xhdpi" />
</widget>
